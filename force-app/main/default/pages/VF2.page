<apex:page controller="calC" >
  <!-- Begin Default Content REMOVE THIS -->
  <h1>Congratulations</h1>
  Hi!! {$!UserName}
  This is your new Page: Calculator
    <apex:form >
  <apex:pageBlock title="Calculator">
  <apex:pageBlockSection >
  <apex:outputLabel >Enter 'A' value</apex:outputLabel>
  <apex:inputText value="{!a}"/>
  </apex:pageBlockSection>
  <apex:pageBlockSection >
    <apex:outputLabel >Enter 'B' value</apex:outputLabel>
  <apex:inputText value="{!b}"/>
  </apex:pageBlockSection>
  <apex:pageBlockButtons >
  <apex:commandButton value="Add" rerender="one" action="{!add}"/>
  <apex:commandButton value="Sub" rerender="one" action="{!sub}"/>
  </apex:pageBlockButtons>
  <apex:pageBlockSection >
  <apex:outputLabel id="one">{!operation}{!res}</apex:outputLabel>
  </apex:pageBlockSection>
  </apex:pageBlock>
  </apex:form>
  
  <!-- End Default Content REMOVE THIS -->
</apex:page>